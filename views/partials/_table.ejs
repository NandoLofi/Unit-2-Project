<% for(let i=1; i < playlist.length; i++) { %>
    <tr>
        <td><%=playlist[i].name%></td>    
        <td><%=playlist[i].link%></td>
        <td><%=playlist[i].desc%></td>
        <td>
            <a href="/playlist/<%=playlist[i]._id%>/editplaylist ">
                <form action="/playlist/<%=playlist[i]._id%>/editplaylist">    
                <input type="submit" value="Edit">
                </form>
            </a>
        </td>
        <td>
            <a href="/playlist/<%=playlist[i]._id%>">
                <form action="/playlist/<%=playlist[i]._id%>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete">
                </form>
            </a>
        </td>        
    </tr>
<% } %>
